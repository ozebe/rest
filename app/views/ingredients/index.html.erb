<p id="notice"><%= notice %></p>

<h1>Ingredientes </h1>

<table>
  <thead>
    <tr>
      <th>Descrição do ingrediente</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ingredients.each do |ingredient| %>
      <tr>
        <td><%= ingredient.description %></td>
        <td><%= link_to 'Visualizar', ingredient %></td>
        <td><%= link_to 'Editar', edit_ingredient_path(ingredient) %></td>
        <td><%= link_to 'Apagar', ingredient, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h3><%= link_to 'Novo ingrediente', new_ingredient_path %></h3>
